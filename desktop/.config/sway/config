input * {
        xkb_layout "fr"
        xkb_variant "oss"
        xkb_options "ctrl:nocaps,shift:both_capslock"
}

input "1:1:AT_Translated_Set_2_keyboard" {
        xkb_layout "fr"
        xkb_variant "oss"
        xkb_options "ctrl:nocaps,shift:both_capslock"
}

input "1133:45915:MX_Keys_Keyboard" {
        xkb_layout "fr"
        xkb_variant "oss"
        xkb_options "ctrl:nocaps,shift:both_capslock"
}

input "1133:45929:MX_Keys_Mini_Keyboard" {
        xkb_layout "fr"
        xkb_variant "oss"
        xkb_options "ctrl:nocaps,shift:both_capslock"
}

input "1267:12680:ELAN0673:00_04F3:3188_Touchpad" {
    tap enabled
    natural_scroll disabled
}

output * {
    bg ~/.config/wallpaper/sunset.jpg fill
}


##############
#     Bar    #
##############

bar {
    swaybar_command waybar
}

