# Alias system
alias rm="rm --preserve-root"

# Alias displaying
alias ls="exa"
alias la="ls -la"
alias ll="ls -l"
alias ld="ls -ld"

# Alias moving
alias ..="cd .."
alias .3="cd ../.."
alias .4="cd ../../.."

# Alias notes
alias notes="nvim -c \":VimwikiIndex\""

# Alias Vim => Neovim
alias v="nvim"
alias vim="nvim"

# Alias Emacs
alias emacs="emacsclient -qc"
alias emacsnw="emacsclient -qt"
alias e="emacs"

# Alias Python
alias venv="python3 -m venv"
alias pip="python3 -m pip"

# Docker helps
alias clean_docker='docker rmi $(docker images -f "dangling=true" -q) --force'
alias delete_docker='docker rm $(docker ps -aq)'

# Git alias
alias ga="git add"
alias gs="git switch"
alias gsc="git switch -c"
alias gst="git status"
alias gcs="git commit -S"
alias gcsm="git commit -S -m"
alias gcsf="git commit -S --fixup"
alias gcsa="git commit -S --amend"
alias glg="git log --graph"
alias glgo="git log --graph --oneline --decorate"
alias gd="git diff"
alias gdc="git diff --cached"

# OCaml
alias dub="dune build"
alias dut="dune runtest"
alias opamsc="opam switch create"
alias opami="opam install"
alias opamdev="opam install merlin ocamlformat ocaml-lsp-server"
alias rmopam="rm -rf _opam"
