# Alias syst√®me
alias rm="rm --preserve-root"

alias la="ls -la"
alias ll="ls -l"
alias ld="ls -ld"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Alias system
alias orga="nvim -c \":VimwikiIndex\""

