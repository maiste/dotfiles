#        env config       #
###########################


# ZSH path
export ZSH=~/.oh-my-zsh


# Export needed a specify level
if [[ $SHLVL == 1 ]]; then

  # PATH for binaries
  export PATH=$PATH:~/bin:~/.local/bin
  export PATH=$PATH:~/.cargo/bin
  export PATH=$PATH:~/go/bin

  export GOPATH=$GOPATH:~/Documents/Languages/GO
fi


# Editor option
export EDITOR="nvim"
export VISUAL="nvim"

# XTerm option
if [[ $TERM == 'xterm' ]] ; then
  export TERM=xterm-256color
fi

# GPG value
export GPG_TTY=$(tty)

# Opam configuration
test -r ~/.opam/opam-init/init.zsh && . ~/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true

# SDKMAN 
export SDKMAN_DIR="/home/maiste/.sdkman"
[[ -s "/home/maiste/.sdkman/bin/sdkman-init.sh" ]] && source "/home/maiste/.sdkman/bin/sdkman-init.sh"
