# Install Nerd Fonts

cd $HOME
wget https://codeload.github.com/ryanoasis/nerd-fonts/zip/refs/tags/v2.1.0
unzip v2.1.0
rm -rf v2.1.0
cd nerd-fonts-2.1.0
./install.sh
cd ../
rm -rf nerd-fonts-2.1.0*


# Install Metropolis theme

cd $HOME
git clone git@github.com:matze/mtheme.git
cd mtheme
make sty
make install
cd $home
rm -rf mtheme
