                    dunst \
                    xbacklight \
                    arandr \
                    util-linux-user \
                    picom \
                    nitrogen \
                    libxcb-devel \
                    xcb-util-keysyms-devel \
                    xcb-util-devel \
                    xcb-util-wm-devel \
                    xcb-util-xrm-devel \
