# Install Yay
cd /tmp
sudo pacman -S --needed base-devel
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si
cd ../
rm -rf paru

# Install AUR packages
paru -Syy fswatch \
	wdisplays \
	tofi \
	pomatez
