# Install Yay
cd /tmp
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
cd ../
rm -rf yay


# Install AUR packages
yay -S nerd-fonts-hack

# Install Metropolis theme
cd $HOME
git clone git@github.com:matze/mtheme.git
cd mtheme
make sty
make install
cd $HOME
rm -rf mtheme
